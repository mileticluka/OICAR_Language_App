@model DAL.Models.GameFlashCard

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>GameFlashCard</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Text)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Text)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Answer)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Answer)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            Language
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Language.Name)
        </dd>
        <dt class="col-sm-2">
            Context Image
        </dt>
        <dd class="col-sm-10">
            @{
                if (!string.IsNullOrEmpty(Model.ContextImage.ImagePath))
                {
                    <img src="@Model.ContextImage.ImagePath" alt="Context Image" class="img-fluid" />
                }
                else
                {
                    <img src="https://placehold.co/600x400" alt="Placeholder" class="img-fluid" />
                }
            }
        </dd>
    </dl>
</div>
<div>
